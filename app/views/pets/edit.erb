<h1>Update Pet</h1>

<form method='post' action='/pets/<%=@pet.id%>'>
<input name='_method' type='hidden' value='patch'>

  <input type='text' id='pet_name' name='pet[name]' value=<%=@pet.name%>><br>

  <%@owners.each do |owner|%>
  <input type='radio' name='pet[owner_id]' id='<%=owner.id%>' value="<%=owner.id%>" <%='checked' if @pet.owner == owner%>><%=owner.name%><br>
  <%end%>
  <input type='text' name='owner[name]' id='owner_name'>
  <input type='submit' value='Update Pet'>
</form>
